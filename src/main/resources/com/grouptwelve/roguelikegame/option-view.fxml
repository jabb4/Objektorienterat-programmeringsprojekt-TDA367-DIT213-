<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id='root' alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.grouptwelve.roguelikegame.controller.OptionsController"
      stylesheets="@global.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Titel Label -->
    <Label text="Options" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

    <!-- Status/Feedback Label -->
    <Label fx:id="actionLabel"/>

    <!-- Buttons -->
    <Button fx:id="screenResolution" text="Screen resolution" onAction="#onSRPressed"/>
    <Button fx:id="audio" text="Audio" onAction="#onAudioPressed"/>
    <Button fx:id="controls" text="Controls" onAction="#onControlsPressed"/>
    <Button fx:id="back" text="Back" onAction="#onBackPressed"/>
</VBox>
